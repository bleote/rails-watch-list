<div class="bg-black">
      <div class="container d-flex col-6 align-items-center justify-content-between py-2">
        <p><%=  link_to "Back to my lists", lists_path, class: "btn btn-secondary p-2 rounded" %></p>

        <p><%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary p-2 rounded" %></p>

        <p><%= button_to "Destroy this movie list", @list, method: :delete %></p>
      </div>
    </div>
<div class="container text-center col-8 bg-transparent pt-5 pb-5">
  <h1><%= @list.name %></h1>
  <div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
      <p><%= bookmark.movie.title %></p>
      <p><%= bookmark.comment %></p>
      <% end %>
    </div>
  </div>
</div>
