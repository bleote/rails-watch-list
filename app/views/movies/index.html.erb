<div class="container text-center col-8 bg-light py-4">
  <h1>Movies</h1>
  <ul class="list-unstyled p-2">
    <% @movies.each do |movie| %>
    <li class="p-1"><strong><%= link_to movie.title, movie_path(movie) %></strong></li>
    <% end %>
  </ul>
  <%= link_to "Back to Main Menu", root_path, class: "btn-primary p-2 rounded" %>
</div>
